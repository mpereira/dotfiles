let configpath = '/Users/murilo/.cvimrc'
set localconfig

copyTitle(node) -> {{
  var text = node.innerText || node.value;
  RUNTIME('copy', { text: text });
  Status.setMessage(text, 2);
}}

copyThisPageTitle() -> {{
  var text = document.title || (document.querySelector("title") || {}).innerText || '';
  RUNTIME('copy', { text: text });
  console.log("hai title");
  Status.setMessage(text, 2);
}}

nextCompletionResult() -> {{
  console.log("hai next");
  Mappings.actions.nextCompletionResult();
}}

previousCompletionResult() -> {{
  console.log("hai previous");
  Mappings.actions.previousCompletionResult();
}}

let hintcharacters = 'asdfghjkl'
let zoomfactor = 0.05
let scrollduration = 500
let scrollstep = 150

" set cncpcompletion
set completeonopen

" Show command bar at the bottom.
let barposition = 'bottom'

" Show fade effect when link hits open and close.
set linkanimations

" Case-insensitive find mode searches except when input contains a capital
" letter
set smartcase

" Begin auto-highlighting find mode matches when input length is greater than
" two characters.
set incsearch

" Do not allow websites to automatically focus an input box when they are first
" loaded.
set noautofocus

" Use smooth scrolling.
set smoothscroll

" The default <Leader> key.
let mapleader = ','

" Remove default non vim-like mappings.
unmap e
unmap s
unmap w
unmap d
unmap u
unmap R
unmap E
unmap S
unmap D

" Open command line with ;
map ; :

map <C-f> scrollFullPageDown
map <C-b> scrollFullPageUp
map <C-d> scrollPageDown
map <C-u> scrollPageUp
map <C-l> clearSearchHighlight

" Doesn work :(
" imap <C-k> nextCompletionResult
" imap <C-k> previousCompletionResult

map <C-z> toggleCvim

map U :restore<Space>

map <Leader>, lastUsedTab

map u lastClosedTab
map yT createScriptHint(copyTitle)
map yt :call copyThisPageTitle<CR>

map <C-j> <TAB>
map <C-k> :call previousCompletionResult<CR>
imap <C-j> <TAB>
imap <C-k> :call previousCompletionResult<CR>

map <Leader>b :buffer<Space>
map <Leader>q closeTab
